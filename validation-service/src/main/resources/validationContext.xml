<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
	    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config />

    <bean id="resourceProviderFactory" class="org.ihtsdo.release.assertion.ResourceProviderFactoryImpl"/>

	<bean id="validationRunner" class="org.ihtsdo.rvf.validation.ValidationTestRunner"/>

	<bean id="configurationFactory" class="org.ihtsdo.rvf.validation.ConfigurationFactory">
		<constructor-arg>
			<map>
				<entry key="x?der2_Refset_Simple.*\.txt" value="/simple-refset-configuration.xml"/>
				<entry key="rel2_Refset_Simple.*\.txt" value="/simple-refset-configuration.xml"/>
				<entry key="x?der2_sRefset_SimpleMap.*\.txt" value="/simple-map-configuration.xml"/>
				<entry key="rel2_sRefset_SimpleMap.*\.txt" value="/simple-map-configuration.xml"/>
				<entry key="x?der2_iisssccRefset_ExtendedMap.*\.txt" value="/extended-map-configuration.xml"/>
				<entry key="rel2_iisssccRefset_ExtendedMap.*\.txt" value="/extended-map-configuration.xml"/>
				<entry key="x?der2_iissscRefset_ComplexMap.*\.txt" value="/complex-map-configuration.xml"/>
				<entry key="rel2_iissscRefset_ComplexMap.*\.txt" value="/complex-map-configuration.xml"/>
			</map>
		</constructor-arg>
		<constructor-arg ref="resourceProviderFactory"/>
	</bean>

</beans>
